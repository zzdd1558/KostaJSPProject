<?xml version="1.0" encoding="UTF-8"?>

<Context>
	
<Resource 
		name="jdbc/orcl" 
		auth="Container"
	    type="javax.sql.DataSource" 	
	    driverClassName="oracle.jdbc.OracleDriver"
	    url="jdbc:oracle:thin:@YOUR_IP:YOUR_PORT:orcl"
	    username="YOUR_ID" 
	    password="YOUR_PASSWORD" 
	    maxTotal="20" 	
	    maxIdle="10"
	    maxWaitMillis="-1"/>
</Context>
